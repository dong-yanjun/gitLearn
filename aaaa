

Private Sub Worksheet_Change(ByVal Target As Range)

Dim rowNum As Integer

Dim columnNum As Integer

Dim rowCount2 As Integer

Dim rowCount1 As Integer

rowNum = Target.Row

columnNum = Target.Column

rowCount2 = Worksheets("Sheet1").Cells(Rows.Count, 2).End(xlUp).Row

rowCount1 = Worksheets("Sheet1").Cells(Rows.Count, 1).End(xlUp).Row

If (columnNum = 1) Then

re = selectProductCD(Target, rowCount2)

End If

If (columnNum = 2) Then

re = selectProductCD(Target, rowCount2)

End If

End Sub


Function selectProductdescribe(ByVal Target As Range, ByVal rowCount As Integer)

End Function




Function selectProductCD(ByVal Target As Range, ByVal rowCount As Integer)

Dim flag As Boolean

Dim value As String

flag = False

For i = 1 To rowCount
value = Worksheets("Sheet1").Cells(i, 2)

If (Target = value) Then
flag = True
Exit For
End If
Next i

If (flag) Then

Target.Interior.ColorIndex = 4

Else
Target.Interior.ColorIndex = 3

End If
End Function
